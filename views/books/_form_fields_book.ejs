<label for="title">title</label>
<input type="text" name="title" value="<%= book.title %>" />
<label for="description">Description</label>
<input name="description" value="<%= book.description %>" />
<label for="author">Author</label>
<select name="author">
  <% authors.forEach(author => { %> <% if (author.id == book.author) { %>
  <option selected label="<%= author.name %>" value="<%= author.id %>">
    <% } else { %>
  </option>
  <option label="<%= author.name %>" value="<%= author.id %>">
    <% } %> <% }) %>
  </option>
</select>
<label for="pageCount">Page Count</label>
<input type="text" name="pageCount" value="<%= book.pageCount %>" />
<label for="publicationDate">Publication Date</label>

<input type="date" name="publicationDate" value="<%= book.publicationDate %>" />
<label for="coverImage">Cover Image</label>
<input type="file" name="coverImage" value="<%- book.coverImage %>" />